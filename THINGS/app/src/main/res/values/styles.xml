<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">@color/purple_light</item>
        <item name="colorControlHighlight">@color/black_alpha40</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purple_light</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="BaseTextFont">
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Headline" parent="BaseTextFont">
        <item name="android:textSize">@dimen/headline_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="Body" parent="BaseTextFont">
        <item name="android:textSize">@dimen/headline_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Button" parent="Headline.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/ripple_blue</item>
    </style>

    <style name="Headline.Button">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

</resources>